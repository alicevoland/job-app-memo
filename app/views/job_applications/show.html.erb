<% content_for :jumbotron do %>
  <div class="jumbotron">
    <div class="container">
      <h1> <%= @job_application.title %> </h1>
      <p class="lead"> <%= l @job_application.updated_at %> </p>
      <p class="lead">
        <%= link_to "Retour sur les candidatures", user_job_applications_path(@user), class: "btn btn-outline-primary btn-lg" %>
      </p>
    </div>
  </div>
<% end %>

<div class="container">

  <div class="job-information row mb-4">
    <div class="col-lg-2 h2"> Modifier </div>
    <div class="col-lg-10">
      <div class="btn-group">
        <%= link_to "Modifier le titre", edit_user_job_application_path(@user, @job_application), class: "btn btn-primary btn-lg mr-4" %>
        <%= link_to "Supprimer", user_job_application_path(@user, @job_application), data: {confirm: "Etes-vous sÃ»r ?"}, method: :delete, :class => "btn btn-outline-danger btn-lg" %>
      </div>
    </div>
  </div>

  <% @job_application.sorted_job_informations.each do |job_information| %>
    <hr class="my-2">
    <% if job_information.id == @edit_job_information&.id %>
      <%= render partial: 'job_informations/form', locals: { job_information: @edit_job_information } %>
    <% else %>
      <%= render partial: 'job_informations/show', locals: { job_information: job_information } %>
    <% end %>
  <% end %>

  <hr class="my-2">
  <% if @new_job_information %>
    <%= render partial: 'job_informations/form', locals: { job_information:  @new_job_information } %>
  <% else %>
    <div class="job-information row mb-4">
      <hr class="my-2">
      <div class="col-lg-2 h2">
      </div>
      <div class="col-lg-10">
        <%= link_to "Ajouter une information", new_user_job_application_job_information_path(@user, @job_application), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>

  <div class="my-2"> </div>
</div>
