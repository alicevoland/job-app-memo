<% content_for :jumbotron do %>
  <div class="jumbotron">
    <div class="container">
      <h1> <%= @job_application.title %> </h1>
      <p class="lead"> <%= l @job_application.updated_at %> </p>
      <p class="lead">
        <%= link_to "Retour sur les candidatures", user_job_applications_path(@user), class: "btn btn-outline-primary btn-lg" %>
      </p>
    </div>
  </div>
<% end %>

<div class="container">

  <% @job_application.sorted_job_informations.each do |job_information| %>
    <div id="job-information-<%= job_information.id %>">
      <% if job_information.id == @edit_job_information&.id %>
        <%= render partial: 'job_informations/form', locals: { job_information: @edit_job_information } %>
      <% else %>
        <%= render partial: 'job_informations/show', locals: { job_information: job_information } %>
      <% end %>
    </div>
  <% end %>

  <div id="job-information-form">
    <% if @new_job_information %>
      <%= render partial: 'job_informations/form', locals: { job_information:  @new_job_information } %>
    <% else %>
      <%= render partial: 'job_applications/actions' %>
    <% end %>
  </div>

  <div class="my-2"> </div>
</div>
