<% content_for :jumbotron do %>
  <div class="jumbotron">
    <div class="container">
      <h1> Mes candidatures </h1>
      <p class="lead"> Voir mes <%= @job_applications.size %> candidatures </p>
      <p class="lead d-flex">
        <%= link_to "Retour sur mon profil", user_path(@user), class: "btn btn-outline-primary btn-lg" %>
      </p>
    </div>
  </div>
<% end %>

<!-- container -->
<div class="container">

  <h1> Une nouvelle candidature ? </h1>

  <p>
    Coller ci dessous le lien de l'offre (ou laisser vide si pas de lien internet)
  </p>

  <% if @job_application && @job_application.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p>La crÃ©ation n'a pu aboutir pour les raisons suivantes : </p>
      <ul>
        <% @job_application.errors.full_messages.each do |message| %>
          <li> <%= message %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(url: "/users/#{@user.id}/job_applications/new", method: "get", local: true) do |form| %>

    <div class="form-group row">
      <div class="col-8 col-lg-9 my-1">
        <%= form.text_field :url, class: "form-control" %>
      </div>
      <div class="col-4 col-lg-3 my-1">
        <%= form.submit "Valider", class: "btn btn-success btn-block" %>
      </div>
    </div>

  <% end %>

  <h1 class="my-4"> Mes candidatures </h1>

  <!-- row -->
  <div class="row">

    <!-- job_application -->
    <% @job_applications.each do |job_application| %>
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"> <%= job_application.title %> </h5>
            <p class="card-text">
              <% if job_application.url %>
                <%= link_to job_application.url, job_application.url, target: "_blank" %>
              <% else %>
                Pas de lien
              <% end %>
            </p>
            <%= link_to "DÃ©tails...", user_job_application_path(@user, job_application), class: "btn btn-outline-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <!-- /job_application -->

  </div>
  <!-- /row -->

</div>
<!-- /container -->
