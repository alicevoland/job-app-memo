<% content_for :jumbotron do %>
  <div class="jumbotron">
    <div class="container">
      <h1> Mes candidatures </h1>
      <p class="lead"> Voir mes <%= @job_applications.size %> candidatures </p>
      <p class="lead d-flex">
        <%= link_to "Retour sur mon profil", user_path(@user), class: "btn btn-outline-primary btn-lg" %>
      </p>
    </div>
  </div>
<% end %>

<!-- container -->
<div class="container">

  <h1 class="mb-4"> Une nouvelle candidature ? </h1>

  <%= render partial: 'form' %>

  <h1 class="my-4"> En cours </h1>

  <!-- row -->
  <div class="row">

    <!-- job_application -->
    <% @user.get_job_applications(archived: false, current: true).each do |job_application| %>
      <div class="col-sm-6">
        <div class="card border-info text-info">
          <div class="card-body">
            <h5 class="card-title"> <%= job_application.title %> </h5>
            <p class="card-text">
              <%= l job_application.created_at %>
            </p>

            <div class="d-flex">
              <%= link_to "Détails...", user_job_application_path(@user, job_application), class: "btn btn-outline-info mr-auto" %>
              <%= link_to "Historique",  user_job_application_job_application_currents_path(@user, job_application), method: :post, class: "btn btn-outline-primary ml-2" %>
              <%= link_to "Archiver",  user_job_application_job_application_archives_path(@user, job_application), method: :post, class: "btn btn-outline-dark ml-2" %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
    <!-- /job_application -->

  </div>
  <!-- /row -->

  <h1 class="my-4"> Mon historique </h1>

  <!-- row -->
  <div class="row">

    <!-- job_application -->
    <% @user.get_job_applications(archived: false, current: false).each do |job_application| %>
      <div class="col-sm-6">
        <div class="card border-primary text-primary">
          <div class="card-body">
            <h5 class="card-title"> <%= job_application.title %> </h5>
            <p class="card-text">
              <%= l job_application.created_at %>
            </p>

            <div class="d-flex">
              <%= link_to "Détails...", user_job_application_path(@user, job_application), class: "btn btn-outline-primary mr-auto" %>
              <%= link_to "En cours",  user_job_application_job_application_currents_path(@user, job_application), method: :post, class: "btn btn-outline-info ml-2" %>
              <%= link_to "Archiver",  user_job_application_job_application_archives_path(@user, job_application), method: :post, class: "btn btn-outline-dark ml-2" %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
    <!-- /job_application -->

  </div>
  <!-- /row -->

  <h1 class="my-4"> Archives </h1>

  <!-- row -->
  <div class="row">

    <!-- job_application -->
    <% @user.get_job_applications(archived: true, current: false).each do |job_application| %>
      <div class="col-sm-6">
        <div class="card border-secondary text-secondary">
          <div class="card-body">
            <h5 class="card-title"> <%= job_application.title %> </h5>
            <p class="card-text">
              <%= l job_application.created_at %>
            </p>
            <div class="d-flex">

              <%= link_to "Détails...", user_job_application_path(@user, job_application), class: "btn btn-outline-secondary btn-block mr-auto" %>
              <%= link_to "Récupérer",  user_job_application_job_application_archives_path(@user, job_application), method: :post, class: "btn btn-outline-dark ml-2" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <!-- /job_application -->

  </div>
  <!-- /row -->

</div>
<!-- /container -->
